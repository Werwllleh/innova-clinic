	script(src="https://api-maps.yandex.ru/2.1/?lang=ru_Ru&apikey=d946dd14-2fe7-4617-a2f4-de241cb948e3")
	script.
		document.addEventListener('DOMContentLoaded', () => {

			const veneersBtn = document.querySelectorAll('.js-modal-veneers');
			const veneersMobileBtn = document.querySelectorAll('.js-modal-veneers-mobile');
			const veneersModal = document.querySelector('.modal-veneers');
			const modalOverlay = document.querySelector('.modal-bg');
			const modalCloseButtons = document.querySelectorAll('.modal-close-btn');

			veneersMobileBtn.forEach((veneerBtn, index) => {
				veneerBtn.addEventListener('click', (e) => {
					e.preventDefault();
					veneersModal.classList.add('active');
					modalOverlay.classList.add('active');
					veneersModal.children[1].children[index].scrollIntoView({block: 'start', behavior: 'smooth'});
					document.body.classList.add('noscroll');
				})
			})

			veneersBtn.forEach((veneerBtn, index) => {
				veneerBtn.children[0].addEventListener('click', (e) => {
					e.preventDefault();
					veneersModal.classList.add('active');
					modalOverlay.classList.add('active');
					veneersModal.children[1].children[index].scrollIntoView({ block: 'start',  behavior: 'smooth' });
					document.body.classList.add('noscroll');
				})

				document.body.addEventListener('keyup', (e) => {
					const key = e.keyCode;

					if (key == 27) {
						modalOverlay.classList.remove('active');
						veneersModal.classList.remove('active');
						document.body.classList.remove('noscroll');
					}
				}, false);
			})

			modalCloseButtons.forEach((closeBtn) => {
				closeBtn.addEventListener('click', (e) => {
					e.preventDefault();
					modalOverlay.classList.remove('active');
					veneersModal.classList.remove('active');
					document.body.classList.remove('noscroll');
				})
			})

			modalOverlay.addEventListener('click', () => {
				modalOverlay.classList.remove('active');
				veneersModal.classList.remove('active');
				document.body.classList.remove('noscroll');
			});

		});

