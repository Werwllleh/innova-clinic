extends pug/base

append vars
	- title = "Врач"
	- body.classList = "mobile-gray-bg"

block content
	// Section Doctor hero
	section.section-doctor-hero
		.section-doctor-hero__container.container.container--mobile-white
			+breadcrumbs(['Главная', 'Врачи'], 'Винокур Анастасия Александровна')(class="section-doctor-hero__breadcrumbs")
			.section-doctor-hero__grid
				.section-doctor-hero__back-link-box
					+back-link("Все врачи", "./doctors.html")(class="section-doctor-hero__back-link")
				img.section-doctor-hero__photo(src="images/section-doctor-hero/photo1.jpg", alt)
				.section-doctor-hero__text-box
					h1.section-doctor-hero__name.h1-t Винокур Анастасия Александровна
					p.section-doctor-hero__job Стоматолог, стоматолог-ортопед
					ul.section-doctor-hero__advantages
						li.section-doctor-hero__advantages-elem
							img.section-doctor-hero__icon.section-doctor-hero__icon--desktop(src="images/icons/diamond.svg")
							img.section-doctor-hero__icon.section-doctor-hero__icon--mobile(src="images/icons/diamond-mobile.svg")
							p.section-doctor-hero__advantages-text 19 лет стажа
						li.section-doctor-hero__advantages-elem
							img.section-doctor-hero__icon.section-doctor-hero__icon--desktop(src="images/icons/medal.svg")
							img.section-doctor-hero__icon.section-doctor-hero__icon--mobile(src="images/icons/medal-mobile.svg")
							p.section-doctor-hero__advantages-text 2 награды
						li.section-doctor-hero__advantages-elem
							img.section-doctor-hero__icon.section-doctor-hero__icon--desktop(src="images/icons/certificate.svg")
							img.section-doctor-hero__icon.section-doctor-hero__icon--mobile(src="images/icons/certificate-mobile.svg")
							p.section-doctor-hero__advantages-text 15 сертификатов
						li.section-doctor-hero__advantages-elem
							img.section-doctor-hero__icon.section-doctor-hero__icon--desktop(src="images/icons/feedback.svg")
							img.section-doctor-hero__icon.section-doctor-hero__icon--mobile(src="images/icons/feedback-mobile.svg")
							p.section-doctor-hero__advantages-text 14 отзывов
					button.btn.m-btn.btn-bg.section-doctor-hero__button(data-modal="appointment") Записаться на прием
	// Section Doctor about
	section.section-doctor-about.container.container--mobile-white
		.content-box.content-box--shift-left.content-box--shift-right
			h2.section-doctor-about__title.h2-t О враче
			.section-doctor-about__text-box
				.section-doctor-about__text-wrap.b-txt
					p Работая в сфере медицины и оказывая лечебную помощь, я несу большую ответственность за свою работу. Придя ко мне, пациенты доверяют самое сокровенное, своё здоровье.
					p Чтобы обеспечить должное качество, необходимо владеть нужной информацией, осваивать новые навыки, постоянно развиваться, внедрять новое, более совершенное.
					p Стремление сделать свою работу лучше и оправдать доверие пациента, мой основной постулат.
					p Работая в сфере медицины и оказывая лечебную помощь, я несу большую ответственность за свою работу. Придя ко мне, пациенты доверяют самое сокровенное, своё здоровье.
					p Чтобы обеспечить должное качество, необходимо владеть нужной информацией, осваивать новые навыки, постоянно развиваться, внедрять новое, более совершенное.
					p Стремление сделать свою работу лучше и оправдать доверие пациента, мой основной постулат.
				button.section-doctor-about__more-btn Читать полностью

	// Section Doctor advantages
	section.section-doctor-advantages.container.container--mobile-white
		.content-box.content-box--shift-left.content-box--shift-right
			h2.section-doctor-advantages__title.h2-t Награды
				sup.title-sup 2
			.section-doctor-advantages__grid(data-modal="advantages", data-modal-mobile="true")
				figure.advantage.advantage--mobile-hide-text
					.advantage__img-box
						img.advantage__icon(src="images/icons/gold-medal.svg")
						p.advantage__year 2013
					figcaption.advantage__text Первое место на чемпионате стоматологического мастерства в номинации "Профессиональное отбеливание"
				figure.advantage.advantage--mobile-hide-text
					.advantage__img-box
						img.advantage__icon(src="images/icons/gold-medal.svg")
						p.advantage__year 2016
					figcaption.advantage__text Первое место на чемпионате стоматологического мастерства в номинации "Эстетическая реставрация"

	// Section Certificate slider
	section.section-certificate-slider.container.container--mobile-white
		.content-box.content-box--shift-left
			.section-certificate-slider__header
				h2.section-certificate-slider__title.h2-t Сертификаты
					sup.title-sup 15
				.slider-nav.slider-nav--dark.section-certificate-slider__nav
					.slider-nav__btn-box
						button.slider-nav__btn.slider-nav__btn--prev
						button.slider-nav__btn.slider-nav__btn--next
			.section-certificate-slider__content.swiper
				.swiper-wrapper
					- n = 1
					while n<7
						// Slide
						.swiper-slide.section-certificate-slider__elem(data-src="images/section-certificate-slider/cert"+n+"-full.jpg")
								img.section-certificate-slider__img(src="images/section-certificate-slider/cert"+n+".jpg", alt)
						- n++

	// Section Portfolio doctor
	section.section-portfolio-doctor
		.section-portfolio-doctor__container.container.container--mobile-white
			.content-box.content-box--shift-left
				.section-portfolio-doctor__header
					h2.section-portfolio-doctor__title.h2-t Работы в портфолио
						sup.title-sup 8
					.slider-nav.slider-nav--dark.section-portfolio-doctor__nav
						.slider-nav__btn-box
							button.slider-nav__btn.slider-nav__btn--prev
							button.slider-nav__btn.slider-nav__btn--next
				.section-portfolio-doctor__slider.swiper
					.swiper-wrapper
						-
							var portfolio = [
								{
									image: 'portfolio1',
									category: 'Виниры',
									title: 'Тотальное преображение улыбки: 28 виниров и коронок',
									time: '2 недели',
								},
								{
									image: 'portfolio2',
									category: 'Имплантация',
									title: 'Сложное протезирование <br>на имплантах',
									time: '6 месяцев',
								},
								{
									image: 'portfolio3',
									category: 'Реставрация',
									title: 'Реставрация по закрытию трем и диастем',
									time: '2 визита',
								},
								{
									image: 'portfolio4',
									category: 'Реставрация',
									title: 'Реставрация по закрытию трем и диастем',
									time: '2 визита',
								},
								{
									image: 'portfolio5',
									category: 'Имплантация',
									title: 'Сложное протезирование <br>на имплантах',
									time: '6 месяцев',
								},
								{
									image: 'portfolio6',
									category: 'Виниры',
									title: 'Тотальное преображение улыбки: 28 виниров и коронок',
									time: '2 недели',
								},
							]
						for portfolioElem in portfolio
							// Slide
							.swiper-slide
								+portfolio-card(portfolioElem.image, portfolioElem.category, portfolioElem.title, portfolioElem.time)

	// Section Doctor feedback
	section.section-doctor-feedback.container.container--mobile-white
		.content-box.content-box--shift-left.content-box--shift-right
			h2.section-doctor-feedback__title.h2-t Отзывы
				sup.title-sup 14
			.section-doctor-feedback__filter
				p.section-doctor-feedback__filter-text Сортировать:
				button.section-doctor-feedback__filter-btn.section-doctor-feedback__filter-btn--current(data-sort="date:desc") По новизне
				button.section-doctor-feedback__filter-btn(data-sort="rate:desc") Сначала положительные
				button.section-doctor-feedback__filter-btn(data-sort="rate:asc") Сначала отрицательные
			.section-doctor-feedback__list
				// Feedback
				.feedback-card.mix(data-date="20231231", data-rate="3")
					.feedback-card__name.b-txt Виктор В.
					.feedback-card__rating
						img.feedback-card__stars(src='images/feedback/stars.svg', alt='rating')
						p.feedback-card__date.b-txt 2 марта 2013 · Яндекс
					.feedback-card__text-box
						.feedback-card__text-wrap
							p Идеальная клиника.
							p в первую очередь хочу поблагодарить нашего любимого стоматолога Ирину Николаевну. Мы лечились у Ирины Николаевны в больнице "в африке" наш идеальный врач нашла подход к нашему ребенку. Все остальные врачи в один голос говорили,что только под наркоз,чего каждый родитель опасается. Но и мы конечно же, не хотели этого. Ирина Николаевна вылечила все зубы сыну, и мы очень сильно привязались к ней к ее грамотному общению с ребенком, каждое посещение теперь как праздник. Теперь наш идеальный врач работает в Иннова клиник, нам очень нравится здесь. Всем советую даже не сомневайтесь
						button.feedback-card__text-more Читать еще
				// Feedback
				.feedback-card.mix(data-date="20231230", data-rate="4")
					.feedback-card__name.b-txt Ольга Безрукова
					.feedback-card__rating
						img.feedback-card__stars(src='images/feedback/stars.svg', alt='rating')
						p.feedback-card__date.b-txt 14 марта · 2ГИС
					.feedback-card__text-box
						.feedback-card__text-wrap
							p Посещаем клинику с первого дня открытия.
							p Проходили лечение с ребёнком у ортодонта и терапевта Инги Васильевны. Я самая сейчас в процессе лечение так же у ортодонта. Инна Николаевна &#129505;
							p Перед лечением был сложный процесс подготовки у хирурга - Олега Зиновьевича Лешканова. Золотые руки, удаление моих лежачих 8ок доверила только ему.
							p Анастасия Александровна Винокур - просто лучшая, современные квалифицированный врач. Свои зубы доверяю только ей.
							p Девочки администраторы, лучшие!
						button.feedback-card__text-more Читать еще
				// Feedback
				.feedback-card.mix(data-date="20231215", data-rate="2")
					.feedback-card__name.b-txt Борис Агеев
					.feedback-card__rating
						img.feedback-card__stars(src='images/feedback/stars.svg', alt='rating')
						p.feedback-card__date.b-txt 14 марта · ПроДокторов
					.feedback-card__text-box
						.feedback-card__text-wrap
							p Филиал на Хмельницкого: уютный офис, современное оборудование, качественные материалы. И самое главное - Профессиональные специалисты, которым стоит доверить здоровье зубов своих детей. Детский врач-стоматолог Лось Ирина Николаевна очень добрый и внимательный доктор, лечение проходит весело и с интересом!
							p Отдельное спасибо администраторам за своевременное напоминание о приеме и скидках на лечение!
						button.feedback-card__text-more Читать еще
				// Feedback
				.feedback-card.mix(data-date="20231215", data-rate="4")
					.feedback-card__name.b-txt Natalya08101987
					.feedback-card__rating
						img.feedback-card__stars(src='images/feedback/stars.svg', alt='rating')
						p.feedback-card__date.b-txt 14 марта · Google
					.feedback-card__text-box
						.feedback-card__text-wrap
							p Отличная клиника, вежливый персонал, атмосфера в клинике уютная. Главное - врачи - профессионалы своего дела.
						button.feedback-card__text-more Читать еще
				// Feedback
				.feedback-card.mix(data-date="20231214", data-rate="5")
					.feedback-card__name.b-txt Василий Григорьев
					.feedback-card__rating
						img.feedback-card__stars(src='images/feedback/stars.svg', alt='rating')
						p.feedback-card__date.b-txt 14 марта · Книга отзывов
					.feedback-card__text-box
						.feedback-card__text-wrap
							p очень клевая стоматология, очень красиво, все новое, понравился телевизор перед креслом- смотрю телик пока мне ремонтируют зубы😊😊 вежливые и внимательные администраторы, а так же вкусный кофе. горячо рекомендую эту клинику
						button.feedback-card__text-more Читать еще
			button.button.button--outline-blue.section-doctor-feedback__button Показать все отзывы
	// Online record
	.online-record.container
		.content-box.content-box--shift-left.content-box--shift-right
			.online-record__content
				img.online-record__photo(src="images/section-doctor-online/photo.jpg", alt)
				.online-record__text-box
					p.online-record__top-text Онлайн запись к врачу
					p.online-record__name Винокур Анастасия Александровна
					p.online-record__job Стоматолог, стоматолог-ортопед
					button.online-write-btn.btn.btn-bg.m-btn.online-record__button(data-modal="appointment") Записаться на прием
	// Section Other doctors
	section.section-other-doctors.container.container--mobile-white
		.content-box.content-box--shift-left.content-box--shift-right
			h2.section-other-doctors__title.h2-t Другие врачи в Иннова Клиник
			.swiper.section-other-doctors__slider
				.section-other-doctors__grid.swiper-wrapper
					-
						var staff = [
							{
								photo: '7.jpg',
								name: 'Пласкин Алексей <br>Александрович',
								experience: '9 лет стажа',
								awards: [
									'1 награда',
								],
								specialization: 'Стоматолог-хирург',
							},
							{
								photo: '8.jpg',
								name: 'Белякова Татьяна <br>Юрьевна',
								experience: '9 лет стажа',
								awards: [
									'1 награда',
								],
								specialization: 'Гигиенист стоматологический',
							},
							{
								photo: '9.jpg',
								name: 'Александрова Екатерина <br>Владиславна',
								experience: '9 лет стажа',
								awards: [
									'1 награда',
								],
								specialization: 'Стоматолог-хирург, стоматолог-имплантолог',
							},
							{
								photo: '10.jpg',
								name: 'Николаева Инга <br>Васильевна',
								experience: '9 лет стажа',
								awards: [
									'1 награда',
								],
								specialization: 'Стоматолог общей практики',
							},
						]
					for doctor in staff
						+doctor(doctor.photo, doctor.name, doctor.experience, doctor.awards, doctor.specialization)(class="swiper-slide section-other-doctors__elem")
